{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++2a",
                "-g",
                "source/*.cpp",
                "-o",
                "${workspaceFolder}/NeuralNetwork"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Custom task."
        }
    ],
    "version": "2.0.0"
}